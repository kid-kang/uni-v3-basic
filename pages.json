{
  "globalStyle": {
    "navigationStyle": "custom", // 需要顶部导航或者自定义顶部导航
    "navigationBarTextStyle": "black", // 控制手机状态栏字体颜色
    "enablePullDownRefresh": false,
    "backgroundColor": "#F8F8F8", // 下拉显示出来的窗口的背景色
    "app-plus": {
      "titleNView": false
    }
  },
  "pages": [
    {
      "path": "pages/home/home"
    },
    {
      "path": "pages/ucenter/ucenter"
    }
  ],
  "subPackages": [
    {
      "root": "subpkg/home",
      "pages": [
        {
          "path": "detail"
        }
      ]
    },
    {
      "root": "subpkg/ucenter",
      "pages": [
        {
          "path": "detail"
        }
      ]
    }
  ],
  "preloadRule": {
    "pages/home/home": {
      "network": "all",
      "packages": [
        "subpkg/home"
      ]
    },
    "pages/ucenter/ucenter": {
      "network": "all",
      "packages": [
        "subpkg/ucenter"
      ]
    }
  },
  "tabBar": {
    "selectedColor": "#318FFE",
    "borderStyle": "white",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconPath": "static/icon/home.png",
        "selectedIconPath": "static/icon/home_active.png"
      },
      {
        "pagePath": "pages/ucenter/ucenter",
        "text": "我的",
        "iconPath": "static/icon/ucenter.png",
        "selectedIconPath": "static/icon/ucenter_active.png"
      }
    ]
  },
  "easycom": {
    "autoscan": true // autoscan是否开启自动扫描，开启后将会自动扫描符合components/组件名称/组件名称.vue目录结构的组件
  }
}